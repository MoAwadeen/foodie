<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="purple_Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="purple_Button_night" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/night</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="orange_Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/red</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:strokeColor">@color/red</item>
    </style>

    <style name="orange_Button_night" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/red</item>
        <item name="android:backgroundTint">@color/night</item>
        <item name="android:strokeColor">@color/red</item>
    </style>

    <style name="BottomNavigationActiveIndicator">
        <item name="android:color">@color/background</item>
        <item name="android:shape">oval</item>
    </style>

    <style name="RoundedSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/rounded_search_view</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textColorHint">@color/purple</item>
        <item name="android:background">@color/background</item>
        <item name="borderRound">20dp</item>
    </style>

</resources>